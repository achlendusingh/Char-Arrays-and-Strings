#include <iostream>
#include <cstring>
using namespace std;

int main() {
    // Write C++ code here
    char name[100];
    name[0]='a';
 name[1]='b';
    name[2]='\0';
    name[3]='a';
    name[4]='a';
    int len=strlen(name);
    cout<<"The length is: "<<len<<endl;
    for(int i=0;i<5;i++)
    {
        cout<<name[i]<<" ";
    }
    string str;
   cout<<"enter the string: ";
   cin>>str;
   str.push_back('a');
   str.push_back('b');
   str.push_back('c');
   str.push_back('\0');
   str.push_back('\0');
   str.push_back('c');
    cout<<str<<endl;
    cout<<str.size()<<endl;
    for (int i=0;i<str.length();i++)
    {
        cout<<str[i];
    }
    return 0;
}


